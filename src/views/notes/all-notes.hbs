<div class="row">
    {{#each notas}}
       <div class="col-md-3">
          <div class="card">
             <div class="card-body">
                <h3 class="card-title d-flex justify-content-between aling-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
                </h3>
                  <h5>{{description}}</h5>
                   <form action="/notes/delete/{{_id}}?_method=delete" method="post">
                     <input type="hidden" name="_method" value="delete">
                     <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                </form>
             </div>
          </div>
       </div>
    {{/each}}
</div>